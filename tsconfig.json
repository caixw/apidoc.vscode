{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/package.json": [
                "./package.json"
            ],
            "@/*": [
                "./src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
